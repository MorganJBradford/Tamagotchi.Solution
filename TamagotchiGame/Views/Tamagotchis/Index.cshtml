@using TamagotchiGame.Models;

<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="UTF-8">
  <title>View Tamagotchi</title>
</head>
<body>
  <h1>Your Tamagotchi(s)</h1>
  @if (Model.Count == 0)
  {
    <p>There are no Tamagotchis</p>
  }
  @foreach (Tamagotchi tamagotchi in Model)
  {
    <p>@tamagotchi.Name</p>
  }
</body>
</html>