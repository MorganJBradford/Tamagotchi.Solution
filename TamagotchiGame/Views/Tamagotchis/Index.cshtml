@using TamagotchiGame.Models;

<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="UTF-8">
  <title>View Tamagotchi</title>
</head>
<body>
  <h1>Your Tamagotchi(s)</h1>
  @if (Model.Count == 0)
  {
    <p>There are no Tamagotchis</p>
  }
  @foreach (Tamagotchi tamagotchi in Model)
  {
    <p><a href="/tamagotchis/@tamagotchi.Id">@tamagotchi.Name</a></p>
  }
  <a href="/tamagotchis/new">Add a new Tamagotchi.</a>
</body>
</html>
